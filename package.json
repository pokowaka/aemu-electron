{
	"name": "aemu-electron",
	"productName": "aemu electron",
	"version": "0.0.0",
	"description": "My hunky-dory app",
	"homepage": "github.com/pokowaka/aemu-electron",
	"license": "MIT",
	"repository": "pokowaka@gmail.com/aemu-electron",
	"main": "build/index.js",
	"author": {
		"name": "Erwin Jansen",
		"email": "jansene@google.com",
		"url": "github.com/pokowaka/aemu-electron"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "eslint src --ext ts",
		"test": "npm run lint",
		"compile": "tsc && copyfiles -f src/index.html build && copyfiles -f src/index.css build",
		"start": "npm run compile && electron ./build/",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos",
		"doc": "typedoc --out docs src",
		"release": "np"
	},
	"dependencies": {
		"@grpc/grpc-js": "^1.2.2",
		"@types/google-protobuf": "^3.7.4",
		"@types/ini": "^1.3.30",
		"@types/tmp": "^0.2.0",
		"chokidar": "^3.4.3",
		"copyfiles": "^2.4.1",
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-store": "^5.1.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.13.0",
		"google-protobuf": "^3.14.0",
		"ini": "^2.0.0",
		"tmp": "^0.2.1",
		"typescript": "^4.1.3"
	},
	"devDependencies": {
		"electron": "^7.3.3",
		"electron-builder": "^21.2.0",
		"np": "^5.0.3",
		"typedoc": "^0.19.2",
		"xo": "^0.25.3"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"files": [
			"build/**/*"
		],
		"appId": "com.pokowaka@gmail.com.aemu-electron",
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"win": {
			"target": "nsis",
			"icon": "build/icon.ico"
		  },
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		}
	}
}
